{
  "name": "ezcord-utils-vsc",
  "displayName": "EzCord Utils (VS Code)",
  "description": "Hover + autocomplete for EzCord i18n keys from YAML language files.",
  "icon": "src/assets/logo.png",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ezcordUtils",
          "title": "EzCord",
          "icon": "src/assets/logo.png"
        }
      ]
    },
    "views": {
      "ezcordUtils": [
        {
          "id": "ezcordUtils.view",
          "name": "EzCord Utils",
          "icon": "src/assets/logo.png"
        }
      ]
    },
    "commands": [
      {
        "command": "ezcordUtils.openSettings",
        "title": "EzCord Utils: Open Settings"
      },
      {
        "command": "ezcordUtils.reloadLanguages",
        "title": "EzCord Utils: Reload Language Files"
      },
      {
        "command": "ezcordUtils.openOutput",
        "title": "EzCord Utils: Show Output"
      },
      {
        "command": "ezcordUtils.revealLanguageFolder",
        "title": "EzCord Utils: Reveal Language Folder"
      },
      {
        "command": "ezcordUtils.openTranslation",
        "title": "EzCord Utils: Open Translation in YAML"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ezcordUtils.openSettings",
          "when": "view == ezcordUtils.view",
          "group": "navigation"
        },
        {
          "command": "ezcordUtils.reloadLanguages",
          "when": "view == ezcordUtils.view",
          "group": "navigation"
        },
        {
          "command": "ezcordUtils.openOutput",
          "when": "view == ezcordUtils.view",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "EzCord Utils",
      "properties": {
        "ezcordUtils.languageFolderPath": {
          "type": "string",
          "default": "bot/lang",
          "description": "Path to the folder containing language YAML files (e.g. bot/lang). Can be relative to the workspace root or an absolute path."
        },
        "ezcordUtils.defaultLanguage": {
          "type": "string",
          "default": "en",
          "description": "Primary language filename prefix to use (e.g. en for en.yaml)."
        },
        "ezcordUtils.fallbackLanguage": {
          "type": "string",
          "default": "en",
          "description": "Fallback language filename prefix (e.g. en). Used if the key is missing in the default language."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": ""
  },
  "dependencies": {
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/node": "^16.18.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^4.4.3"
  }
}