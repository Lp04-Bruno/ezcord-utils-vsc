{
  "name": "ezcord-utils-vsc",
  "displayName": "EzCord Utils",
  "description": "Hover + autocomplete for EzCord i18n keys from YAML language files.",
  "icon": "src/assets/logo.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "version": "0.1.1",
  "publisher": "Lp04-Bruno",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lp04-Bruno/ezcord-utils-vsc.git"
  },
  "bugs": {
    "url": "https://github.com/Lp04-Bruno/ezcord-utils-vsc/issues"
  },
  "homepage": "https://github.com/Lp04-Bruno/ezcord-utils-vsc#readme",
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "ezcord",
    "i18n",
    "localization",
    "translation",
    "yaml",
    "python",
    "hover",
    "autocomplete",
    "discord"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ezcordUtils",
          "title": "EzCord",
          "icon": "src/assets/logo.png"
        }
      ]
    },
    "views": {
      "ezcordUtils": [
        {
          "id": "ezcordUtils.view",
          "name": "EzCord Utils",
          "icon": "src/assets/logo.png"
        }
      ]
    },
    "commands": [
      {
        "command": "ezcordUtils.openLanguageKeysOverview",
        "title": "EzCord Utils: Open Language Keys Overview"
      },
      {
        "command": "ezcordUtils.openSettings",
        "title": "EzCord Utils: Open Settings"
      },
      {
        "command": "ezcordUtils.reloadLanguages",
        "title": "EzCord Utils: Reload Language Files"
      },
      {
        "command": "ezcordUtils.openOutput",
        "title": "EzCord Utils: Show Output"
      },
      {
        "command": "ezcordUtils.revealLanguageFolder",
        "title": "EzCord Utils: Reveal Language Folder"
      },
      {
        "command": "ezcordUtils.openTranslation",
        "title": "EzCord Utils: Open Translation in YAML"
      }
    ],
    "configuration": {
      "title": "EzCord Utils",
      "properties": {
        "ezcordUtils.languageFolderPath": {
          "type": "string",
          "default": "bot/lang",
          "description": "Path to the folder containing language YAML files (e.g. bot/lang). Can be relative to the workspace root or an absolute path."
        },
        "ezcordUtils.defaultLanguage": {
          "type": "string",
          "default": "en",
          "description": "Primary language filename prefix to use (e.g. en for en.yaml)."
        },
        "ezcordUtils.fallbackLanguage": {
          "type": "string",
          "default": "en",
          "description": "Fallback language filename prefix (e.g. en). Used if the key is missing in the default language."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "build": "npm run bundle",
    "compile": "tsc -p ./",
    "typecheck": "tsc -p ./ --noEmit",
    "bundle": "npm run typecheck && node scripts/esbuild.js",
    "watch": "node scripts/esbuild.js --watch",
    "postinstall": ""
  },
  "dependencies": {
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/node": "^16.18.0",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.20.2",
    "typescript": "^4.4.3"
  }
}